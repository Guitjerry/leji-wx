.section-wrapper {
  background: #fff;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.section {
  display: flex;
}

.section .section-name {
  width: 160rpx;
  font-size: 30rpx;
  line-height: 88rpx;
  box-sizing: border-box;
}

.section .section-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}




.section .section-content .layout-right {
  display: flex;
  justify-content: flex-end;
}

.section .section-content .row {
  height: 88rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding-right: 30rpx;
  box-sizing: border-box;
}

.section .section-content .placeholder{
  font-size: 30rpx;
  color: #ddd;
}

.section-content input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.section-content .sex.row .male,
.section-content .sex.row .female {
  display: flex;
  align-items: center;
}

.section-content .sex.row image,
.section-content .sex.row text {
  margin-right: 20rpx;
}

.address-location .section-content .title {
  flex: 1;
  font-size: 30rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 540rpx;
}

.section picker text {
  font-size: 30rpx;
}

.section picker text.null {
  color: #ddd;
}

.address-location .row.detail {
  height: 126rpx;
  padding: 10rpx 30rpx 10rpx 0;
  overflow: auto;
}

.address-location .detail textarea {
  font-size: 30rpx;
  line-height: 40rpx;
  height: 100%;
  width: 100%;
}

.section picker .address-tag {
  color: #fff;
  width: 60rpx;
  height: 28rpx;
  line-height: 30rpx;
  font-size: 26rpx;
  border-radius: 4rpx;
  display: inline-block;
  text-align: center;
}

.section picker .more {
  display: inline-block;
}

.more {
  width: 16rpx;
  height: 16rpx;
  border: 4rpx solid #ccc;
  border-left: none;
  border-bottom: none;
  transform: rotate(45deg);
  margin-left: 16rpx;
}

.operate {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 10%;
}

.switch-btn{
  padding: 0 20rpx;
}
.addressLine{
  display:flex;
  justify-content: center;
  align-items: center;
}
.addressLine .help{
  font-size:24rpx;
  color:red;
  margin-left:5rpx;
}
.addressLine image{
width:30rpx!important;
height:30rpx!important;
margin-left:20rpx;
}
