<template name="restaurant-row">
  <view class='shop-item ui-border-b'>
    <image src='{{item.portraitUrl}}' class='avatar'></image>
    <view class='content'>
      <view class='name'>
        <text class='shop-name'>{{item.shopName}}</text>
      </view>
      <view class='rating'>
        <view class='left'>
          <text> 销量{{item.salesVolume}}单</text>
        </view>
      </view>
      <view class='delivery'>
        <view class='left'>
          <text>￥{{item.minimumDeliveryAmount}}元起送</text>
        </view>
        <view class='right'>
          <text class='distance'>距您 | {{item.distance}}m</text>
        </view>
      </view>
    </view>
  </view>
</template>
