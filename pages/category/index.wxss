page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  /* less中使用calc的时候要注意 */
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cates .cates_container .left_menu {
  /* 子项 高度 100% flex */
  flex: 2;
  height: 600px;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_content {
  /* 子项 高度 100% flex */
  flex: 5;
}
.cates .cates_container .right_content .goods_title .title {
  display: flex;
  background-color: #a6a6a6;
  color: #fff;
  padding: 5rpx;
  margin: 5rpx;
  width: 30%;
  text-align: center;
  vertical-align: middle;
  border-radius: 5rpx;
}
.cates .cates_container .right_content .goods_title .selected {
  color: #fff;
  background: #eb4450;
}

.cates .cates_container .right_content .goods_body {
  padding: 10rpx;
  font-size: 26rpx;
  margin-bottom: 10px;
}

.cates .cates_container .right_content .goods_body .left {
  width: 200rpx;
  height: 200rpx;
  margin-top: 10rpx;
}

.cates .cates_container .right_content .goods_body .left image {
  width: 100%;
  height: 100%;
}

.cates .cates_container .right_content .goods_body .right .good_name {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.cates .cates_container .right_content .goods_body .right .good_description {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  color: #a6a6a6;
}
.cates .cates_container .right_content .goods_body .right .good_price .icon {
  padding: 5rpx;
  width: 50rpx;
  text-align: center;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #fff;
  background: #eb4450;
}
.cates .cates_container .right_content .goods_body .right {
  width: 50%;
}
.cates .cates_container .right_content .goods_body .right .good_price .sale_price_pre {
  margin-left: 20rpx;
  color: #eb4450;
  font-weight: bold;
}
.cates .cates_container .right_content .goods_body .right .good_price .sale_price_last {
  color: #eb4450;
  font-size: 24rpx;
  margin-top: 2rpx;
}
.cates .cates_container .right_content .goods_body .right .good_price .old_price {
  margin-left: 20rpx;
  text-decoration: line-through;
}
.cates .cates_container .right_content .goods_body .add_btn {
  margin-top: 10rpx;
}
.cates .cates_container .right_content .goods_body .add_btn text:first-child {
  margin-right: 20rpx;
  border: 1rpx solid #c6c6c6;
  border-radius: 50%;
  text-align: center;
  vertical-align: middle;
  width: 37rpx;
}
.cates .cates_container .right_content .goods_body .add_btn text:last-child {
  margin-left: 20rpx;
  background: #eb4450;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  vertical-align: middle;
  width: 37rpx;
}
.cates .cates_container .cart {
  background: #e6e6e6;
  padding: 5rpx;
  width: 100rpx;
  height: 100rpx;
  right: 0rpx;
  position: absolute;
  top: 50%;
  border-radius: 10rpx;
}
.cates .cates_container .cart .icon_border {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 10rpx;
  position: relative;
}

.cates .cates_container .cart .icon_border .icon {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
}
.cates .cates_container .cart .icon_border text {
  position: absolute;
  background: #eb4450;
  text-align: center;
  vertical-align: middle;
  color: #fff;
  font-weight: bold;
  right: -5rpx;
  top: -10rpx;
  font-size: 24rpx;
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  padding: 5rpx;
}
.wordindex {
  line-height: 50rpx;
  background: #f7f7f7;

  font-size: 14px;
  color: #929292;
  padding-left: 28rpx;
}

