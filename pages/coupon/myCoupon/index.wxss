
/**头部开始**/

.ms-fixed-coupon {
    font-size: 24rpx;
    z-index: 2;
    position: relative;
}

.ms-fixed-coupon .ms-header-coupon {
    z-index: 100;
    width: 100%;
}

.ms-fixed-coupon .ms-fixed-top{
    top: 0;
    left: 0;
}

.ms-header-coupon .ms-content {
    background: #FFF;
    position: relative;
}

.ms-header-coupon .ms-content .ms-filter {
    background: #FFF;
    z-index: 100;
    width: 100%;
    top: 80rpx;
}

.ms-filter .ms-content .item-nav {
    box-sizing: border-box;
    height: 80rpx;
    padding: 0 18.75rpx;
    display: flex;
    width: 100%;
}

.ms-filter .ms-content .item {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
    font-size: 28rpx;
    color: #333;
}

.ms-header-coupon .ms-filter .ms-content {
    margin: 0 auto;
    position: relative;
    width: 100%;
    border-bottom: 1px solid #efefef;
}

.ms-filter.ms-filter-tab .item text {
    box-sizing: border-box;
    border-bottom: 5rpx solid #FFF;
    height: 80rpx;
    line-height: 80rpx;
    display: block;
    font-size: 28rpx;
    color: #333;
}

.ms-filter .ms-content .item text {
    display: flex;
    align-items: center;
    justify-content: center;
}

.ms-filter .ms-content .active {
    color: #E72722;
}

.ms-filter .ms-content .active text {
    border-bottom: 5rpx solid #E72722;
    color: #E72722;
}

.ms-coupon-header {
    background-color: #FFF;
    position: relative;
    z-index: 100;
    display: flex;
}

.ms-row {
    width: 100%;
    margin: 0 auto;
}

.ms-coupon-header .content {
    display: flex;
    align-items: center;
    padding: 20rpx 0rpx 20rpx 30rpx;
    box-sizing: border-box;
    flex: 2;
}

.ms-coupon-header .content view {
    flex: 1;
    border: 1px solid #efefef;
    border-radius: 4rpx;
    height: 68rpx;
    box-sizing: border-box;
    overflow: hidden;
    border-right: 0;
}

.ms-coupon-header .content view input {
    height: 66rpx;
    box-sizing: border-box;
    padding: 10rpx 15rpx;
    width: 100%;
    font-size: 28rpx;
    background-color: #FFF;
    border: none;
}

.ms-coupon-header .content view .phcolor {
    color: #b2b2b2;
}

.ms-coupon-header .content text {
    height: 68rpx;
    width: 150rpx;
    font-size: 28rpx;
    color: #FFF;
    background-color: #E72722;
    opacity: 0.5;
    border-radius: 0 4rpx 4rpx 0;
    border: none;
    display: flex;
    justify-content: center;
    align-items: center;
}

.ms-coupon-header .content text.cur {
    opacity: 1;
}


/**头部结束**/

.ms-rule {
    position: relative;
    box-sizing: border-box;
    color: #FEA354;
    width: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    vertical-align: middle;
    z-index: 999;
}

.ms-rule .ms-main .text {
    vertical-align: middle;
    color: #FEA34F;
    display: inline-block;
}

.ms-rule .ms-main image {
    display: inline-block;
    height: 30rpx;
    width: 30rpx;
    vertical-align: middle;
    margin-right: 5rpx;
}

.ms-containerFromOrder .ms-filter-tab,
.ms-containerFromOrder .ms-rule {
    display: none;
}

.noUseCoupon {
    display: none;
    box-sizing: border-box;
    padding: 0 30rpx 20rpx;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 100;
}

.noUseCoupon .content {
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    border: 1px solid #E72722;
    display: flex;
    justify-content: center;
    align-items: center;
}


.noUseCoupon.show {
    display: block;
}
.ms-container-coupon{
    height: 100%;
    background-color: #f5f5f5;
    height: calc(100% - 80rpx)!important;
}
.ms-container-coupon.order {
    height: 100%;
    height: calc(100% - 210rpx)!important;
    top: 0;
}


.ms-coupon-button {
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    box-sizing: border-box;
    width: 100%;
    height: 108rpx;
    z-index: 100;
}

.ms-coupon-button .content {
    padding: 0 30rpx;
    box-sizing: border-box;
    margin: 0 auto;
    width: 100%;
}

.ms-coupon-button .content .btn {
    background: 0 0;
    color: #E72722;
    border: 1px solid #E72722;
    display: flex;
    height: 68rpx;
    justify-content: center;
    align-items: center;
    width: 100%;
    font-size: 28rpx;
    border-radius: 100rpx;
}