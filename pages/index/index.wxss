}

.hot_recommend .body {
  margin: 20rpx;
}
.hot_recommend .body .single{
  padding: 10rpx;
  width: 46%;
  border-radius: 20rpx;
  border: 1rpx solid #f6f6f6;
  margin: 10rpx;
}
.hot_recommend .body image {
  width: 286rpx;
  height: 286rpx;
}

.hot_recommend .body .info {
  margin-top: 10rpx;
  color: red;
}
.hot_recommend .body .desc {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  margin-top: 10rpx;
  text-align: center;
}


