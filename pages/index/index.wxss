}
.sale_recommend .body image {
  width: 120rpx;
  height: 120rpx;
}

.sale_recommend .body .info {
  margin-top: 10rpx;
  text-align: center;
  color: #eb4450;
}

.sale_recommend .body .desc {
  margin-top: 10rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 20rpx;
  background-color: #ff4e5d;
