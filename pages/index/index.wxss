/*新品推荐*/
.sale_recommend {
  margin: 20rpx 10rpx;
  background-color: #fff;
  padding: 10rpx;
  border-radius: 20rpx;
}
.sale_recommend .title {
  margin-bottom: 10px;
}
.sale_recommend .title .info {
  font-weight: bold;
  font-size: 28rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
}
.sale_recommend .title .desc {
  background-color: #ff8491;
  font-size: 20rpx;
  width: 300rpx;
  text-align: center;
  height: 34rpx;
  line-height: 34rpx;
  vertical-align: middle;
  border-radius: 30rpx;
  color: #fff;
  margin-right: 25%;
}
.sale_recommend .title .icon text {
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 10rpx;
}
.sale_recommend .title .icon image{
